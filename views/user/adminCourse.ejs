<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .table-container {
            margin-top: 20px;
        }
    </style>
    <title>Document</title>
</head>
<body>
<button type="button" class="btn btn-danger mr-1" onclick="window.location.href='/'">Main</button>
<h1>Admin Panel</h1>
<div class="table-container">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Direction</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <%courses.forEach(function (course, i){%>
        <tr>
            <td><%=course._id%></td>
            <td><%=course.fio%></td>
            <td><%=course.title%></td>
            <td><%=course.description%></td>
            <td><%=course.price%></td>
            <td><%=course.direction%></td>
            <td><%= course.createdAt.toLocaleDateString('ru-RU', { day: '2-digit', month: '2-digit', year: 'numeric' }) %></td>
            <td>
                <%if(course.status==='в обработке'){%>
                    <button type="button" class="btn btn-primary mr-1" data-bs-toggle="modal" data-bs-target="#approveModal<%= i %>">Одобрить</button>
                    <button type="button" class="btn btn-primary mr-1" data-bs-toggle="modal" data-bs-target="#rejectModal<%= i %>">Отказать</button>
                <%} else{%>
                <%=course.status%>
                <%}%>
            </td>
        </tr>
        <%- include('../components/admin/rejectModal');%>
        <%- include('../components/admin/approveModal');%>

        <% }); %>
        </tbody>
    </table>
</div>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <button type="button" class="btn btn-primary btn-group" onclick="window.location.href='/admin/users'">Users</button>
            <button type="button" class="btn btn-primary btn-group" onclick="window.location.href='/admin/helps'">Helps</button>
            <button type="button" class="btn btn-danger btn-group" onclick="window.location.href='/'">Logout</button>

        </div>
    </div>
</div>
</body>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</html>