<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .table-container {
            margin-top: 20px;
        }
    </style>
    <title>Document</title>
</head>
<body>
<button type="button" class="btn btn-danger mr-1" onclick="window.location.href='/'">Main</button>
<h1>Admin Panel</h1>
<div class="table-container">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% helps.forEach(function(help, i) { %>
            <tr>
                <td><%= help._id %></td>
                <td><%= help.titleH %></td>
                <td><%= help.descriptionH %></td>
                <td><%= help.phoneH %></td>
                <td><%= help.emailH %></td>
                <td>
                    <button type="button" class="btn btn-danger mr-1" data-bs-toggle="modal" data-bs-target="#deleteHelpModal<%= i %>">Delete</button>
                </td>
            </tr>

            <%- include('../components/admin/deleteHelpModal');%>

        <% }); %>
        </tbody>
    </table>
</div>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <button type="button" class="btn btn-primary btn-group" onclick="window.location.href='/admin/courses'">Courses</button>
            <button type="button" class="btn btn-primary btn-group" onclick="window.location.href='/admin/users'">Users</button>
            <button type="button" class="btn btn-danger btn-group" onclick="window.location.href='/'">Logout</button>

        </div>
    </div>
</div>

</body>
