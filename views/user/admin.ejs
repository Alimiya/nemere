<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .table-container {
            margin-top: 20px;
        }
    </style>
    <title>Document</title>
</head>
<body>
<button type="button" class="btn btn-danger mr-1" onclick="window.location.href='/'">Main</button>
<h1>Admin Panel</h1>
<div class="table-container">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Experience</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% users.forEach(function(user, i) { %>
            <tr>
                <td><%= user._id %></td>
                <td><%= user.name %></td>
                <td><%= user.surname %></td>
                <td><%= user.lastname %></td>
                <td><%= user.email %></td>
                <td><%= user.experience %></td>
                <td><%= user.role %></td>
                <td>
                    <button type="button" class="btn btn-primary mr-1" data-bs-toggle="modal" data-bs-target="#updateModal<%= i %>">Edit</button>
                    <button type="button" class="btn btn-danger mr-1" data-bs-toggle="modal" data-bs-target="#deleteModal<%= i %>">Delete</button>
                </td>
            </tr>

            <%- include('../components/admin/editModal');%>


            <%- include('../components/admin/deleteModal');%>

        <% }); %>
        </tbody>
    </table>
</div>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <button type="button" class="btn btn-success btn-group" data-bs-toggle="modal" data-bs-target="#addModal">Add User</button>
            <button type="button" class="btn btn-primary btn-group" onclick="window.location.href='/admin/courses'">Courses</button>
            <button type="button" class="btn btn-primary btn-group" onclick="window.location.href='/admin/helps'">Helps</button>
            <form action="/logout" method="get">
                <button type="submit" class="btn btn-danger btn-group">Logout</button>
            </form>
        </div>
    </div>
</div>
<%- include('../components/admin/addModal');%>

</body>
