<% courses.forEach((course , i) => { %>
    <!-- Delete modal -->
    <div class="modal fade" id="deleteModal<%= i %>" tabindex="-1" aria-labelledby="deleteModalLabel2" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/profile/<%= course._id%>/courses/delete" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel2" data-i18n="delete--link">Delete</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h2 class="btn--link" data-i18n="delete--course--link">Delete User</h2>
                        <p class="btn--link" data-i18n="delete--course--text--link">Are you sure you want to delete this user?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn--link btn btn-secondary" data-bs-dismiss="modal" data-i18n="close--link">Close</button>
                        <button type="submit" class="btn--link btn btn-primary" data-i18n="delete--link">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% }); %>
