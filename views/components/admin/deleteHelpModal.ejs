<% helps.forEach(function(help, i) { %>
    <!-- Delete modal -->
    <div class="modal fade" id="deleteHelpModal<%= i %>" tabindex="-1" aria-labelledby="deleteHelpModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/admin/helps/delete/<%= help._id %>" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteHelpModalLabel">Delete</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h2>Delete User</h2>
                        <p>Are you sure you want to delete this user?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% }); %>
