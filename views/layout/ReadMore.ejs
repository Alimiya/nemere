<!--Bootstrap-->
<header>
    <%- include('../components/header');%>
</header>
<%courses.forEach((course)=>{%>
<ul>
    <li><%=course.fio%></li>
    <li><%=course.title%></li>
    <li><%=course.description%></li>
    <li><%=course.price%></li>
    <li><%=course.direction%></li>
</ul>

<form action="/course/comment/<%= course._id%>" method="POST">
    <label for="nick">Введите ваше имя:</label>
    <input type="text" name="nick" id="nick" required>
    <label for="comment">Комментарий:</label>
    <textarea name="comment" id="comment" required></textarea>
    <label for="rating">Рейтинг:</label>
    <select name="rating" id="rating" required>
        <option value="0">0</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>

    <button type="submit">Отправить комментарий</button>
</form>
<%})%>
<%comments.forEach((comment, i)=>{%>
<ul>
    <li><%=comment.nick%></li>
    <li><%=comment.comment%></li>
    <li><%=comment.rating%></li>
    <%if(adminlogin){%>
        <button type="button" class="btn btn-danger mr-1" data-bs-toggle="modal" data-bs-target="#deleteReadModal<%= i %>">Delete</button>
        <%- include('../components/course/deleteReadModal');%>
    <%}%>
</ul>
<%})%>
<button>Buy please</button>